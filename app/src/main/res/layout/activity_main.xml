<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/free"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/car_park1" android:fontFamily="@font/roboto"
            android:textAlignment="center" android:textSize="@dimen/box_text_size"
            android:background="@android:color/holo_orange_dark" android:textColor="@android:color/background_light"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="@string/free"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/car_park2" android:fontFamily="@font/roboto"
            android:textAlignment="center" android:textSize="@dimen/box_text_size"
            android:background="@android:color/holo_green_dark" android:textColor="@android:color/background_light"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/car_park1" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/car_park3" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.489"/>
    <TextView
            android:text="@string/free"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/car_park3" android:fontFamily="@font/roboto"
            android:textAlignment="center" android:textSize="@dimen/box_text_size"
            android:background="@color/colorPrimary" android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idCar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_width="0dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/car_park2" android:hint="@string/idCar_text"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/brand"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/idCar"
            android:hint="@string/brand_text"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/brand" android:hint="@string/name_text"/>
    <Button
            android:text="@string/update_bt_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_bt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/delete_bt"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginStart="16dp" tools:ignore="DuplicateIds"
            android:background="@android:color/holo_blue_dark" android:textColor="@android:color/background_light"/>
    <Button
            android:text="@string/delete_bt_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_bt"
            app:layout_constraintStart_toEndOf="@+id/update_bt" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/name" android:layout_marginEnd="16dp"
            android:background="@android:color/holo_red_light" android:textColor="@android:color/background_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>